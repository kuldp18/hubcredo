NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/hubcredo

# JWT Secrets (Change these in production!)
JWT_ACCESS_SECRET=your_super_secret_access_key_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_min_32_chars

# JWT Expiration
# Development: 15 minutes for access token
# Production: 1 day for access token
JWT_ACCESS_EXPIRE_DEV=15m
JWT_ACCESS_EXPIRE_PROD=1d
JWT_REFRESH_EXPIRE=7d

# CORS
# Development
CORS_ORIGIN_DEV=http://localhost:5173
# Production (comma-separated if multiple)
CORS_ORIGIN_PROD=PROD_URL
